pipeline {
    agent any
    tools {
    maven 'maven3'
    } 
    stages {
        stage('Clone GitHub Repositry') {
            steps {
                git branch: 'master', url: 'https://github.com/jleetutorial/maven-project'
            }
        }
        stage('build'){
            steps{
                sh 'mvn package'
            }
        }
        stage('archive artifacts'){
            steps{
            archiveArtifacts artifacts: '**/*.war', followSymlinks: false
            }
        }
    } 
}
